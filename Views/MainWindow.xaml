<Window x:Class="BookLendingLib.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingLib"
        mc:Ignorable="d"
        Title="Book Library App" Height="560" Width="540">
    <Grid>
        <ContentControl Content="{Binding CurrentView}" Height="340" Width="500" />
        <Button x:Name="btnMainView" Content="Home" HorizontalAlignment="Left" Margin="16,70,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnBookManagingView" Content="Reader Options" HorizontalAlignment="Left" Margin="96,70,0,0" VerticalAlignment="Top" Width="92"/>
        <Button x:Name="btnReaderManagingView" Content="Books Options" HorizontalAlignment="Left" Margin="193,70,0,0" VerticalAlignment="Top" Width="92"/>
    </Grid>
</Window>
